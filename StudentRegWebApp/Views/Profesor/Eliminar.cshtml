@model StudentRegWebApp.Models.Profesor

@{
    ViewData["Title"] = "Eliminar Profesor";
}

<h2>¿Estás seguro de eliminar este profesor?</h2>

<div>
    <h4>@Model.Nombre</h4>
    <p>Usuario: @Model.Usuario?.Email</p>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
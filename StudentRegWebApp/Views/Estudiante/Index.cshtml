@model IEnumerable<StudentRegWebApp.Models.Estudiante>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2>Lista de Estudiantes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Número de Documento</th>
            <th>Programa de Créditos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var estudiante in Model)
    {
        <tr>
            <td>@estudiante.Nombre</td>
            <td>@estudiante.NumeroDocumento</td>
            <td>@estudiante.ProgramaCreditos?.Nombre</td>
            <td>
                <a asp-action="Detalles" asp-route-id="@estudiante.Id">Detalles</a> |
                <a asp-action="Editar" asp-route-id="@estudiante.Id">Editar</a> |
                <a asp-action="Eliminar" asp-route-id="@estudiante.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-primary">Nuevo Estudiante</a>
@model StudentRegWebApp.Models.ProgramaCreditos

@{
    ViewData["Title"] = "Eliminar Programa de Créditos";
}

<h2>¿Estás seguro de eliminar este programa?</h2>

<div>
    <h4>@Model.Nombre</h4>
    <p>Créditos: @Model.Creditos</p>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@model StudentRegWebApp.Models.ProgramaCreditos

@{
    ViewData["Title"] = "Crear Programa de Créditos";
}

<h2>Crear Programa de Créditos</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Créditos</label>
        <input asp-for="Creditos" class="form-control" />
        <span asp-validation-for="Creditos" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
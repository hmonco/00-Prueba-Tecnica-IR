@model IEnumerable<StudentRegWebApp.Models.ProgramaCreditos>

@{
    ViewData["Title"] = "Programas de Créditos";
}

<h2>Programas de Créditos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Creditos</td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-primary">Nuevo Programa</a>
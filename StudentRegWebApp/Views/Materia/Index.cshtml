@model IEnumerable<StudentRegWebApp.Models.Materia>

@{
    ViewData["Title"] = "Materias";
}

<h2>Materias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cr√©ditos</th>
            <th>Profesor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var materia in Model)
    {
        <tr>
            <td>@materia.Nombre</td>
            <td>@materia.Creditos</td>
            <td>@materia.Profesor?.Nombre</td>
            <td>
                <a asp-action="Detalles" asp-route-id="@materia.Id">Detalles</a> |
                <a asp-action="Editar" asp-route-id="@materia.Id">Editar</a> |
                <a asp-action="Eliminar" asp-route-id="@materia.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Crear" class="btn btn-primary">Nueva Materia</a>